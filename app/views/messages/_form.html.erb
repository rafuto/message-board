<%= form_for @message , html:{class:'form-horizontal'} do|f| %>
<% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="message_name" class="col-md-2 control-label">名前: </label>
    <div class="col-md-10">
       <%= f.text_field :name , class:"form-control", placeholder:"Your name is here."%>
    </div>
  </div>
  
  <div class="form-group">
    <label for="message_body" class="col-md-2 control-label">内容: </label>
    <div class="col-md-10">
      <%= f.text_area :body, class:"form-control", placeholder:"something to say"%>
    </div>
  </div>
  
  <div class="form-group">
    <label for="message_age" class="col-md-2 control-label">年齢: </label>
    <div class="col-md-10">
      <%= f.text_field :age, class:"form-control", placeholder:"Your age is here"%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "送信", class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %> 
