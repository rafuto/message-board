<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>


<%= form_for @message , html:{class:'form-horizontal'} do|f| %>
  <div class="form-group">
    <label for="message_name" class="col-md-2 control-label">名前: </label>
    <div class="col-md-10">
       <%= f.text_field :name , class:"form-control", placeholder:"Your name is here."%>
    </div>
  </div>
  
  <div class="form-group">
    <label for="message_body" class="col-md-2 control-label">内容: </label>
    <div class="col-md-10">
      <%= f.text_area :body, class:"form-control", placeholder:"something to say"%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "送信", class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>
